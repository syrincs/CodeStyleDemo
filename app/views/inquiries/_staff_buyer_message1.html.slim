.modal-dialog
  .modal-content
    =simple_form_for @message, :url => [:staff_buyer_message, @inquiry], :html => {:class => "form-horizontal"}, remote: true do |f|
      .modal-header
        a.close(data-dismiss="modal") Ã—
        h4.modal-title=_("New message concerning inquiry %{id}") % {:id => @inquiry.id}

      .modal-body
        p=_("In case you received a message from the byuer directly, you can enter it here and it'll be added to the inquiry's history.")
        =f.input :html, :label => false, as: :text, :input_html => {:class => "editor"}, :autofocus => true

      .modal-footer
        =f.submit _("Send message"), class: "btn btn-primary", data: {disable_with: _("Please wait...")}

coffeeview:
  width = $("#modal").find("textarea").outerWidth() + 40
  $("#modal").find(".modal-dialog").innerWidth(width)

  enableEditors("#modal")
